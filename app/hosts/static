server {
    listen 80;

    server_name static.sailx.loc;
    sendfile off;
    client_max_body_size 64m;

    charset utf-8;

    location ~* \.(?:ico|css|js|jpe?g|JPG|png|gif|svg|woff2|woff|mp4)$ {
            add_header "Access-Control-Allow-Origin"  *;
            root                    /var/www/app/public/templetes/template;
            expires 7d;
            access_log off;
    }

    location ~* \.(?:js|css|woff|woff2|ttf)$ {
            add_header "Access-Control-Allow-Origin"  *;
            root                    /var/www/app/public;
            expires         365d;
            access_log      off;
    }

    location ~ /\.ht {
        deny all;
    }
}

